#:kivy 2.0.0

<AxisSlider>:
    canvas:
        # Background rectangle with rounded corners
        Color:
            rgba: 0.15, 0.15, 0.15, 1
        RoundedRectangle:
            pos: self.x + self.width * 0.15, self.y + 10
            size: self.width * 0.7, self.height - 20
            radius: [8]
            
        # Center line
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        RoundedRectangle:
            pos: self.x + self.width * 0.15, self.center_y - 1
            size: self.width * 0.7, 2
            radius: [1]
            
        # Value bar
        Color:
            rgba: 0.2, 0.7, 1.0, 1 if self.value >= 0 else 1.0, 0.4, 0.2, 1
        RoundedRectangle:
            pos: self.x + self.width * 0.15, self.center_y if self.value >= 0 else self.y + (self.height * (self.value + 1) / 2)
            size: self.width * 0.7, abs(self.height * self.value / 2)
            radius: [4]
            
    BoxLayout:
        pos: root.pos
        size: root.size
        orientation: 'vertical'
        padding: [5, 5]
        
        Label:
            text: root.axis_name
            font_size: '16sp'
            bold: True
            color: 1, 1, 1, 1
            size_hint_y: 0.3
            
        Label:
            text: format(root.value, '.2f')
            font_size: '14sp'
            color: 0.2, 0.7, 1.0, 1 if root.value >= 0 else (1.0, 0.4, 0.2, 1)
            size_hint_y: 0.3
            
        Label:
            text: root.control_name
            font_size: '14sp'
            color: 0.8, 0.8, 0.8, 1
            size_hint_y: 0.4

<ModelSelector>:
    canvas.before:
        Color:
            rgba: 0.12, 0.12, 0.12, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

    orientation: "horizontal"
    size_hint_y: None
    height: 40
    padding: [5, 0]
    spacing: 10
    
    Label:
        text: "Model:"
        size_hint: None, None
        size: 100, 40
        valign: "middle"
        color: 0.9, 0.9, 0.9, 1
        bold: True
        font_size: '16sp'

    Button:
        id: model_button
        text: root.selected_model if root.selected_model else "Select Model"
        size_hint: None, None
        size: 200, 40
        background_normal: ''
        background_color: 0.2, 0.6, 1.0, 1
        color: 1, 1, 1, 1
        font_size: '16sp'
        bold: True

<ValueDisplay>:
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'vertical'
    padding: 0
    spacing: 0
    
    BoxLayout:  # Container for model selector
        size_hint_y: None
        height: 45
        padding: [5, 5]
    
    BoxLayout:  # Container for grid
        padding: [5, 5]
        
        GridLayout:
            id: channel_grid
            cols: 5
            spacing: 8
            size_hint_y: 1
