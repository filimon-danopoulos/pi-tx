#:kivy 2.0.0

<AxisSlider>:
    canvas:
        # Background rectangle
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.x + self.width * 0.25, self.y + 10
            size: self.width * 0.5, self.height - 20
            
        # Center line
        Color:
            rgba: 0.4, 0.4, 0.4, 1
        Rectangle:
            pos: self.x + self.width * 0.2, self.center_y - 1
            size: self.width * 0.6, 2
            
        # Value bar
        Color:
            rgba: 0.2, 0.6, 1.0, 1
        Rectangle:
            pos: self.x + self.width * 0.25, self.center_y if self.value >= 0 else self.y + (self.height * (self.value + 1) / 2)
            size: self.width * 0.5, abs(self.height * self.value / 2)
    Label:
        pos: root.pos
        size: root.size
        text: root.axis_name + '\n' + format(root.value, '.3f') + '\n' + root.control_name
        font_size: '15sp'
        halign: 'center'

<ValueDisplay>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    GridLayout:
        id: channel_grid
        cols: 5  # 5 columns for channels
        spacing: 10
        size_hint_y: 1
