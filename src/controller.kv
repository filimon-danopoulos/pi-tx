#:kivy 2.0.0

<ValueDisplay>:
    orientation: 'horizontal'
    padding: 20
    spacing: 20

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'X'
            font_size: '20sp'
        Label:
            text: '0.000'
            font_size: '40sp'
            id: x_value

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Y'
            font_size: '20sp'
        Label:
            text: '0.000'
            font_size: '40sp'
            id: y_value

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Z'
            font_size: '20sp'
        Label:
            text: '0.000'
            font_size: '40sp'
            id: z_value
