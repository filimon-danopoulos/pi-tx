#:kivy 2.0.0

<AxisSlider>:
    canvas:
        # Background rectangle
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.x + self.width * 0.25, self.y + 10
            size: self.width * 0.5, self.height - 20
            
        # Center line
        Color:
            rgba: 0.4, 0.4, 0.4, 1
        Rectangle:
            pos: self.x + self.width * 0.2, self.center_y - 1
            size: self.width * 0.6, 2
            
        # Value bar
        Color:
            rgba: 0.2, 0.6, 1.0, 1
        Rectangle:
            pos: self.x + self.width * 0.25, self.center_y if self.value >= 0 else self.y + (self.height * (self.value + 1) / 2)
            size: self.width * 0.5, abs(self.height * self.value / 2)
    Label:
        pos: root.pos
        size: root.size
        text: root.axis_name + '\n' + format(root.value, '.3f')
        font_size: '20sp'
        halign: 'center'

<ValueDisplay>:
    padding: 10
    spacing: 10

    GridLayout:
        cols: 5  # 5 columns for 2 rows of 5 sliders
        spacing: 10
        size_hint_y: 1
        
        AxisSlider:
            id: ch1
            axis_name: 'CH1'
        
        AxisSlider:
            id: ch2
            axis_name: 'CH2'
        
        AxisSlider:
            id: ch3
            axis_name: 'CH3'
        
        AxisSlider:
            id: ch4
            axis_name: 'CH4'
        
        AxisSlider:
            id: ch5
            axis_name: 'CH5'
        
        AxisSlider:
            id: ch6
            axis_name: 'CH6'
        
        AxisSlider:
            id: ch7
            axis_name: 'CH7'
        
        AxisSlider:
            id: ch8
            axis_name: 'CH8'
        
        AxisSlider:
            id: ch9
            axis_name: 'CH9'
        
        AxisSlider:
            id: ch10
            axis_name: 'CH10'
